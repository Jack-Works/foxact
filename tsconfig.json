{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["DOM", "ES2018", "ESNext.WeakRef"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "rollup.config.ts", "tools/**/*.ts"],
  "exclude": ["docs"],
  "ts-node": {
    "swc": true
  }
}
